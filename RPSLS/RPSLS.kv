BoxLayoutExample:

<BoxLayoutExample>:
    orientation : 'vertical'
    Image:
        source: "RPSLS.png"
        size_hint :1, 1.3
    Label:
        size_hint: 1, 1.5
        font_name: "impact.ttf"
        text: "The rules: \n Scissors cuts paper,\n paper covers rock,\n rock crushes lizard,\n lizard poisons Spock,\n Spock smashes scissors,\n scissors decapitates lizard,\n lizard eats paper,\n paper disproves Spock,\n Spock vaporizes rock,\n and as it always has, rock crushes scissors."




    BoxLayout:
        orientation: 'vertical'

        Label:
            text:"\n\n\n\n\nEnter your name to get started: \n (Click enter after entering your name and then click on start) \n\n\n\n\n"
            font_name: "impact.ttf"

        AnchorLayout:
        # right, left, center
            anchor_x: 'center'

            # bottom, top, center\n
            anchor_y: 'top'
            TextInput:
                id: my_txtInput
                font_name: "impact.ttf"
                multiline : False
                size_hint : 0.5, 0.6
                on_text_validate: root.onTextValidate(self)

        AnchorLayout:
            anchor_x: 'center'
            # bottom, top, center
            anchor_y: 'top'
            Button:
                font_name: "impact.ttf"
                text : 'Start'
                size_hint: 0.5, 0.1
                on_press: root.onButtonAClick()


